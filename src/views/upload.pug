extends base.pug


block content
    div 
        video#preview
        button#startBtn Start Recording
    if errorMassage 
        span=errorMassage 
    form(method="post",enctype="multipart/form-data")
        label(for="video") Video UPload
        input(type="file",name="video",ID="video", accept="video/*",required) 
        input(name="title", placeholder="Title", type="text", required)
        input(name="description", placeholder="Description", type="text", required)
        input(name="hashtags", placeholder="Hachtags, separated by comma.", type="text", required)
        input(type="submit")

block scripts
    script(src="/assets/js/recoder.js")