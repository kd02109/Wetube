header 
    a(href="/").header__logo
        i.fab.fa-youtube 
    nav 
        ul 
            li 
                a(href="/search")   
                    i.fas.fa-search
            if !loggedIn
                li 
                    a(href="/join") Join
                li 
                    a(href="/login").header__btn Login
            else 
                li 
                    a(href="/logout") LogOut 
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/videos/upload") Uploadd Video
                li 
                    a(href=`/users/${user._id}`)
                        if !user.avatarUrl
                            span.header_avatar--icon 😁
                        else 
                            img.header_avatar(src=`${user.socialOnly ? "" : "/"}`+user.avatarUrl, crossorigin)